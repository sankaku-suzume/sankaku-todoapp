!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SankakuTodoapp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
  %body
    %header.header
      %h1.header__pageTitle Boards
      - if user_signed_in?
        .dropdown 
          = image_tag 'default-avatar.png', class: 'header_avatar dropbtn'
          .dropdown-content 
            %a{href: "#"} Profile
            = link_to 'Log out', destroy_user_session_path, data: { method: 'delete'}
      - else
        = link_to 'Log in', new_user_session_path, class: 'header_loginBtn'
    = yield
    %p.notice= notice
    %p.alert= alert
